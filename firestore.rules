rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the user is an authenticated admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Items collection rules
    match /Items/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Deals collection rules
    match /Deals/{dealId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Optional: Rules for user-specific data (if you store user profiles/settings)
    match /users/{userId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 